<?xml version="1.0" encoding="UTF-8"?>
<layout>
    <default>
        <reference name="notifications">
            <block type="tiny_compressimages/adminhtml_apiNotification" name="tiny_compressimages_api_key_notification" template="Tiny/CompressImages/Api/keyNotification.phtml"/>
        </reference>
    </default>
    <adminhtml_system_config_edit>
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>css/Tiny/CompressImages/config.css</name>
            </action>
        </reference>
    </adminhtml_system_config_edit>

    <adminhtml_cache_index>
        <reference name="content">
            <block name="cache.additional">
                <block type="tiny_compressimages/adminhtml_cache_warning" name="tig.compressimages.cache-warning" template="Tiny/CompressImages/Cache/warning.phtml"></block>
            </block>
        </reference>
    </adminhtml_cache_index>
</layout>
