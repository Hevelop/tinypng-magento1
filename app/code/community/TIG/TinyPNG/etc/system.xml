<config>
    <sections>
        <tig_tinypng translate="label" module="tig_tinypng">
            <label>TinyPNG</label>
            <tab>general</tab>
            <frontend_model>tig_tinypng/adminhtml_system_config_form</frontend_model>
            <class>tig-tinypng-section</class>
            <frontend_type>text</frontend_type>
            <sort_order>1200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <support translate="label" module="tig_tinypng">
                    <label>Version &amp; Support</label>
                    <sort_order>0</sort_order> <!-- This should always be the first tab -->
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <support>
                            <sort_order>0</sort_order>
                            <frontend_model>tig_tinypng/adminhtml_system_config_form_field_supportTab</frontend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </support>
                    </fields>
                </support>

                <compress_status translate="label" module="tig_tinypng">
                    <label>Compress status</label>
                    <sort_order>50</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <log_status>
                            <sort_order>0</sort_order>
                            <frontend_model>tig_tinypng/adminhtml_system_config_form_field_logStatus</frontend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </log_status>
                    </fields>
                </compress_status>

                <settings translate="label">
                    <label>TinyPNG Settings</label>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label comment">
                            <label>Enable TinyPNG</label>
                            <frontend_type>tinypng_radios</frontend_type>
                            <sort_order>10</sort_order>
                            <source_model>tig_tinypng/system_config_source_testlive</source_model>
                            <comment>If this is set to Off, TinyPNG will no longer compress images</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <api_key tranaslate="label">
                            <label>API Key</label>
                            <frontend_type>text</frontend_type>
                            <backend_model>tig_tinypng/system_config_backend_apiKey</backend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </api_key>
                    </fields>
                </settings>

                <status translate="label">
                    <label>TinyPNG Status</label>
                    <sort_order>110</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <usage translate="label comment">
                            <label>Status</label>
                            <sort_order>10</sort_order>
                            <frontend_type>tinypng_status</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </usage>
                        <saved>
                            <label>Saved</label>
                            <sort_order>20</sort_order>
                            <frontend_type>tinypng_saved</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </saved>
                        <api>
                            <label>TinyPNG API Status</label>
                            <sort_order>30</sort_order>
                            <frontend_type>tinypng_api</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </api>
                    </fields>
                </status>
                <configuration translate="label">
                    <label>Configuration</label>
                    <sort_order>120</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <!--<automatic_compression translate="label comment">
                            <label>Automatic compression for dynamic images and cache elements</label>
                            <sort_order>10</sort_order>
                            <source_model>tig_tinypng/system_config_source_onOff</source_model>
                            <frontend_type>select</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </automatic_compression>-->
                        <product_compression translate="label comment">
                            <label>Product images to be compressed</label>
                            <sort_order>30</sort_order>
                            <source_model>tig_tinypng/system_config_source_product_imageTypes</source_model>
                            <frontend_type>multiselect</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </product_compression>
                        <!--<cms_compression translate="label comment">
                            <label>CMS images to be compressed</label>
                            <sort_order>40</sort_order>
                            <source_model>tig_tinypng/system_config_source_cms_imageTypes</source_model>
                            <frontend_type>multiselect</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cms_compression>-->
                        <logging_mode translate="label comment">
                            <label>Messages that sould be logged</label>
                            <comment>An Exception shall always be logged.</comment>
                            <sort_order>50</sort_order>
                            <source_model>tig_tinypng/system_config_source_log</source_model>
                            <frontend_type>select</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </logging_mode>
                    </fields>
                </configuration>
            </groups>
        </tig_tinypng>
    </sections>
</config>