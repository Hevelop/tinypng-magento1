<config>
    <tabs>
        <tinypng module="tig_tinypng" translate="label">
            <label>TIG</label>
            <sort_order>302</sort_order>
        </tinypng>
    </tabs>
    <sections>
        <tig_tinypng translate="label" module="tig_tinypng">
            <label>TIG Tinypng</label>
            <tab>tinypng</tab>
            <frontend_model>tig_tinypng/adminhtml_system_config_form</frontend_model>
            <class>tig-tinypng-section</class>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <support translate="label" module="tig_tinypng">
                    <label>Version &amp; Support</label>
                    <sort_order>0</sort_order> <!-- This should always be the first tab -->
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <support>
                            <sort_order>0</sort_order>
                            <frontend_model>tig_tinypng/adminhtml_system_config_form_field_supportTab</frontend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </support>
                    </fields>
                </support>
                <settings translate="label">
                    <label>Settings</label>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label comment">
                            <label>Enable Tinypng</label>
                            <frontend_type>tinypng_radios</frontend_type>
                            <sort_order>10</sort_order>
                            <source_model>tig_tinypng/system_config_source_testlive</source_model>
                            <comment>If this is set to Off, Tinypng will no longer compress images</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <api_key tranaslate="label">
                            <label>API Key</label>
                            <frontend_type>text</frontend_type>
                            <backend_model>tig_tinypng/system_config_backend_apiKey</backend_model>
                            <sort_order>30</sort_order>
                            <validate>validate-alphanum</validate>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </api_key>
                    </fields>
                </settings>
            </groups>
        </tig_tinypng>
    </sections>
</config>